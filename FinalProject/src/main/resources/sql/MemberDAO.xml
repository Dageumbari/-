	<select id="getTeamMemberList" resultType="com.bit.model.dto.MemberDTO">
		SELECT TEAMCODE,
			 TEAMNAME,
			 PERMISSIONNO,
			 PERMISSIONNAME,
			 USERNO,
			 NAME,
			 USERIMAGE
		FROM MEMBER
		WHERE #{TEAMCODE} = TEAMCODE
	</select>
	
	<select id="getMemberListByPermission" resultType="com.bit.model.dto.MemberDTO">
		SELECT USERNO,
			   NAME,
			   USERIMAGE,
			   PERMISSIONNO,
			   PERMISSIONNAME
		FROM MEMBER
		WHERE #{PERMISSIONNO} = PERMISSIONNO
	</select>
	
