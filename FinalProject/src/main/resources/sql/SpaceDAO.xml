	<!-- space-user데이터 -->
	<select id="getSpaceUserInfo" resultType="spaceDTO">
		select
		sp.spaceCode,
		sp.spaceName,
		sp.spaceUrl,
		sp.spaceImage,
		sp.spaceUrl,
		sp.spaceVisibility,
		ui.userNo,
		ui.name,
		ui.userImage

		from Space sp
		left outer join team te on te.teamCode=sp.teamCode
		left outer join memPermit mp on te.teamCode=mp.teamCode
		left outer join user_info ui on mp.userNo=ui.userNo
	</select>

